<% if user_signed_in? %>
  <ul>
    <li><%= "signed in as: #{current_user.username}" %></li>
    <li><%= link_to "Create New Post", new_post_path %></li>
    <li><%= button_to "Sign out", destroy_user_session_path, method: :delete %></li>
  </ul>
<% else %>
  <ul>
    <%= link_to "Sign in", new_user_session_path  %>
  </ul>
<% end %>
